let mapleader = "\<Space>"
filetype plugin indent on

autocmd BufEnter * :set scroll=10 
syntax on

set encoding=UTF-8
set mouse=a 

set incsearch 
set hlsearch

set tabstop=4
set softtabstop=0
set shiftwidth=4
" Bật highlight cú pháp cho một loại file (như .py, .cpp, .xml)

syntax enable
set number

